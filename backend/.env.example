# Database
DATABASE_URL=sqlite:///./medhastra.db

# Security
SECRET_KEY=supersecretkey
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS
CORS_ORIGINS=http://localhost:3000

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_BASE=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name # e.g., gpt-4

# --- New LLM Configuration ---
# Select the LLM provider: 'azure', 'openai', 'gemini', 'deepseek'
LLM_PROVIDER=azure
# Model name for non-Azure providers (e.g., "gpt-4", "gemini-1.5-pro-latest", "deepseek-chat")
# Azure uses AZURE_OPENAI_DEPLOYMENT_NAME above.
LLM_MODEL_NAME=gpt-4

# --- Provider Specific API Keys & Settings ---
# OpenAI (Required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini (Required if LLM_PROVIDER=gemini)
GOOGLE_API_KEY=your-google-api-key

# DeepSeek (Required if LLM_PROVIDER=deepseek)
DEEPSEEK_API_KEY=your-deepseek-api-key
# DEEPSEEK_API_BASE=https://api.deepseek.com/v1 # Optional: Override default DeepSeek endpoint

# --- General LLM Parameters (Optional) ---
# LLM_TEMPERATURE=0.5
# LLM_MAX_TOKENS=4096
# LLM_TIMEOUT=120 # Timeout in seconds for LLM calls
# LLM_MAX_RETRIES=2 # Number of retries on failure

# Files
REPORTS_DIR=reports
STATIC_DIR=static
